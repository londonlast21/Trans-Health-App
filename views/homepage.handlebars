<ol class="post-list">
    {{#each posts}}
  <li>
      <!--encases entire post and comments-->
    <article class="post">
      
       <!--part for the info from post-->
        <h1>{{name}}</h1>
        <h3>{{location}}</h3>
        <p>added by {{user_id}}</p>

    <!--comments div-->
      <div class="comments">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>