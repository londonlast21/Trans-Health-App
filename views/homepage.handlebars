<ol class="post-list">
    <p>{{posts.length}} providers in the system</p>
    {{#each posts}}
  <li>
      <!--encases entire post and comments-->
    <article class="post">
        
      
       <!--part for the info from post-->
        <h2>{{name}}</h2>
        <h4>{{location}}</h4>
        <p>added by {{user_id}}</p>

    <!--comments div-->
      <div class="comments">
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>