<article class="post">
    <div class="name">
        <h1>{{post.name}}</h1>
        <h4>{{post.location}}</h4>
        <p> added by {{post.user_id}}</p>
    </div>
    <!--comments div-->
    <div class="comments">
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>

    </div>

</article>


<!--add comments form-->
{{#if loggedIn}}
<form class ="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Review/Comment</button>
    
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>


